<p id="notice"><%= notice %></p>
<% if current_user %>
  Signed in as <%= current_user.name %> | <%= link_to "Logout", '/logout' %>
<% else %>
  <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
<% end %>

<h1>Listing Requests</h1>

<table>
  <thead>
    <tr>
      <th>Ticket</th>
      <th>Email</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Org</th>
      <th>Date start</th>
      <th>Date end</th>
      <th>Date submitted</th>
      <th>Info</th>
      <th>status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.ticket %></td>
        <td><%= request.email %></td>
        <td><%= request.name %></td>
        <td><%= request.phone %></td>
        <td><%= request.org %></td>
        <td><%= request.date_start %></td>
        <td><%= request.date_end %></td>
        <td><%= request.date_submitted %></td>
        <td><%= request.info %></td>
        <td><%= request.status %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
